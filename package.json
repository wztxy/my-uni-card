{
  "name": "my-campus-card",
  "productName": "MyCampusCard",
  "author": "wztxy",
  "version": "1.0.0",
  "description": "Campus card transaction analysis and report generator",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "vite build",
    "start": "vite build && electron .",
    "pack": "vite build && electron-builder",
    "gen:icons": "node scripts/generate-icons.mjs",
    "gen:qrcode": "node scripts/generate-qrcode.mjs"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "html2canvas": "^1.4.1",
    "tough-cookie": "^6.0.0",
    "vue": "^3.5.26",
    "vue-i18n": "^11.2.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^2.1.8",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "vite": "^7.3.0"
  },
  "build": {
    "appId": "com.campuscard.analyzer",
    "productName": "MyCampusCard",
    "compression": "maximum",
    "icon": "assets/icon.ico",
    "publish": null,
    "extraResources": [
      {
        "from": "assets/macos",
        "to": "macos"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "portable"
      ]
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
